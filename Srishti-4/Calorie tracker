// Quiz Questions Array
const quizQuestions = [
  {
    question: "What does HTML stand for?",
    answer: "hypertext markup language"
  },
  {
    question: "Which keyword is used to declare a block-scoped variable in JavaScript?",
    answer: "let"
  },
  {
    question: "What method converts a string to lowercase in JavaScript?",
    answer: "tolowercase"
  },
  {
    question: "Which symbol is used for single-line comments in JavaScript?",
    answer: "//"
  },
  {
    question: "What does CSS stand for?",
    answer: "cascading style sheets"
  }
];

// Function to run the quiz
function runQuiz() {
  let score = 0;

  alert("ğŸš€ Welcome to the JavaScript Console Quiz!\nTest your core JS knowledge.\n\nClick OK to begin.");

  for (let i = 0; i < quizQuestions.length; i++) {
    let userAnswer = prompt(
      "Question " + (i + 1) + ":\n" + quizQuestions[i].question
    );

    // Handle quiz cancel
    if (userAnswer === null) {
      alert("â— Quiz cancelled by user.");
      return;
    }

    // Normalize input
    userAnswer = userAnswer.toLowerCase().trim();

    // Check answer
    if (userAnswer === quizQuestions[i].answer) {
      score++;
      alert("âœ… Correct! Great job!");
    } else {
      alert(
        "âŒ Incorrect!\nCorrect Answer: " + quizQuestions[i].answer
      );
    }
  }

  // Performance Message
  let performanceMessage = "";

  if (score === quizQuestions.length) {
    performanceMessage = "ğŸŒŸ Outstanding! Perfect Score!";
  } else if (score >= 3) {
    performanceMessage = "ğŸ‘ Good job! Keep improving!";
  } else {
    performanceMessage = "ğŸ’¡ Needs practice. Try again!";
  }

  alert(
    "ğŸ‰ Quiz Completed!\n\n" +
    "Your Final Score: " + score + " / " + quizQuestions.length +
    "\n" + performanceMessage
  );

  // Restart Option
  let restart = confirm("ğŸ”„ Do you want to play again?");
  if (restart) {
    runQuiz();
  } else {
    alert("Thank you for playing! ğŸ‘¨â€ğŸ’»");
  }
}

// Start Quiz
runQuiz();
